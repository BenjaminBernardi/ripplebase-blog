{% if title is defined %}
    <h2 class="mt-5">{{ title }}</h2>
{% endif %}
<div class="row">
    {% for publication in publications %}
        <a class="col-lg-4 col-md-6 col-sm-12 mb-2 card-link"
           href="/publication/{{ publication.id }}">
            <div class="container-img">
                <img src="{{ publication.imagePath }}"
                     alt="{{ publication.title }}"
                     class="rounded">
            </div>
            <div class="d-flex justify-content-between">
                <h3 class="yellow-hover">
                    {{ publication.title }}
                </h3>
            </div>
        </a>
    {% endfor %}
</div>
