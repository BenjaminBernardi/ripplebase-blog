{% extends 'base.admin.html.twig' %}

{% block title %}GÃ©rer les utilisateurs{% endblock %}

{% block body %}
    {% include 'partials/alert.html.twig' %}

    <div class="container">
        <h1 class="text-center">Liste des utilisateurs</h1>
        <div class="d-flex justify-content-end my-2">
            <a class="btn bg-yellow-ripple" href="{{ path('app_admin_publication') }}">Publications</a>
            <a class="btn bg-yellow-ripple ms-2" href="{{ path('app_home') }}">Retour au site</a>
        </div>
        <div class="row justify-content-center table-responsive">
            <table class="table table-dark table-striped align-middle">
                <tr class="text-center">
                    <th class="col-3">Email</th>
                    <th class="col-3">Pseudo</th>
                    <th class="col-3">Date d'inscription</th>
                    <th class="col-3">Action</th>
                </tr>
                {% for user in users %}
                    <tr class="text-center">
                        <td>{{ user.email }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.createdAt|date("d/m/Y") }}</td>
                        <td>
                            <div class="d-flex flex-row justify-content-evenly">
                                <a class="text-light" href="{{ path('app_admin_user_delete', {'id': user.id}) }}"><i
                                        class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        {# display navigation #}
        <div class="navigation d-flex justify-content-center my-2">
                {{ knp_pagination_render(users, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
        </div>
    </div>
{% endblock %}
