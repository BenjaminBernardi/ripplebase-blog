<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Ripplebase{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    {% block stylesheets %}
        {{ encore_entry_link_tags('style') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('script') }}
    {% endblock %}
</head>
<body>
{% block header %}
    {% include 'partials/navbar.html.twig' %}
{% endblock %}

<main>
{% block body %}{% endblock %}
</main>

{% block footer %}
    <footer class="d-flex flex-wrap justify-content-between align-items-center bg-dark py-3 mt-4 border-top">
        <div class="col-md-4 d-flex align-items-center">
            <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1" aria-label="Ripplebase logo">
                <img src="{{ asset("/assets/img/rbase_logo.png") }}" width="40" height="40" alt="Ripplebase logo"
                     class="m-lg-2">
            </a>
            <span class="mb-3 mb-md-0 text-light">© 2025 Ripplebase Corp.</span>
        </div>
        <ul class="nav col-md-4 justify-content-end d-flex me-2">
            <li class="ms-3">
                <a href="https://www.instagram.com/ripplebase/" aria-label="Instagram">
                    <img src="{{ asset('/assets/img/instagram.png') }}" width="40" height="40" alt="Instagram">
                </a>
            </li>
            <li class="ms-3">
                <a href="https://www.twitch.tv/ripplebase" aria-label="Twitch">
                    <img src="{{ asset('/assets/img/twitch.png') }}" width="40" height="40" alt="Twitch">
                </a>
            </li>
        </ul>
    </footer>
{% endblock %}
</body>
</html>
